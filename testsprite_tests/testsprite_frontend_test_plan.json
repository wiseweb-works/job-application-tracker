  {
    "id": "TC003",
    "title": "Add a new application with all required fields plus optional Salary Range and Notes",
    "description": "Verifies a user can create a new job application and then see it listed on the applications dashboard.",
    "category": "Add / Edit Application",
    "priority": "High",
    "steps": [
      {
        "type": "action",
        "description": "Navigate to /applications"
      },
      {
        "type": "assertion",
        "description": "Verify text \"Applications\" is visible"
      },
      {
        "type": "action",
        "description": "Click \"Add Application\""
      },
      {
        "type": "action",
        "description": "Type \"Acme Corp\" into the \"Company Name\" field"
      },
      {
        "type": "action",
        "description": "Type \"Frontend Engineer\" into the \"Job Title\" field"
      },
      {
        "type": "action",
        "description": "Select \"Applied\" from the \"Status\" dropdown"
      },
      {
        "type": "action",
        "description": "Type \"New York, NY\" into the \"Location\" field"
      },
      {
        "type": "action",
        "description": "Type \"2026-02-15\" into the \"Application Date\" field"
      },
      {
        "type": "action",
        "description": "Type \"$120k-$140k\" into the \"Salary Range\" field"
      },
      {
        "type": "action",
        "description": "Type \"Reached out to recruiter on LinkedIn.\" into the \"Notes\" field"
      },
      {
        "type": "action",
        "description": "Click \"Submit\""
      },
      {
        "type": "assertion",
        "description": "Verify text \"Success\" is visible"
      },
      {
        "type": "assertion",
        "description": "Verify text \"Acme Corp\" is visible"
      },
      {
        "type": "assertion",
        "description": "Verify text \"Frontend Engineer\" is visible"
      }
    ]
